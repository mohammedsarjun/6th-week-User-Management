    <div class="body-page bg-dark vh-100 d-flex justify-content-center">
        <div class="body-content container h-75 mt-5 row">
            <div class="content-menu col-2">
                <h2 class="text-light">Dashboard <i class="fa-solid fa-gauge"></i></h2>
                <ul class="text-light list-unstyled mt-5 list-group">
                    <li class="cursor-pointer"><a href="#" class="text-decoration-none text-light">User List</a></li>
